@model IEnumerable<DemoAPI_Web.Models.Dto.VillaNumberDTO>

<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Create New VillaNumber</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Villa Name</th>
                <th>Villa Number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Villa.Name</td>
                    <td>@item.VillaNo</td>
                    <td>
                        <a asp-action="UpdateVillaNumber" asp-route-villaId="@item.VillaNo" class="btn btn-outline-success mx-3" style="width:100px">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-action="DeleteVillaNumber" asp-route-villaId="@item.VillaNo" class="btn btn-outline-danger" style="width:100px">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
